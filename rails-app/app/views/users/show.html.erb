<div class="large-12 columns">
	<div class="row">
		<a class="button tiny right" href="<%= edit_user_path(@user) %>">edit</a>
		<% if @user.name && @user.name != "" %>
			<h1><%= @user.name %>, <small>you've done things.</small></h1>
		<% else %>
			<div class="medium-6 columns">
				<%= form_for @user, :url => {:action=>:update}, :html => {:class => "callout-form"} do |f| %>
					<div class="row collapse">
						<div class="medium-8 columns">
							<%= f.text_field :name, :placeholder=>"You have no name." %>
						</div>
						<div class="medium-4 columns">
							<button type="submit" class="button postfix">Set it</button>
						</div>
					</div>
				<% end %>
			</div>
		<% end %>
	</div>

	<div class="row">
		<h3>Things you bought</h3>

		<% if @bought_items.length <= 0 %>
			<p class="alert-box info">Nothing.</p>
		<% else %>
			<ul class="block-grid">
				<% @bought_items.each do |item| %>
				<li>
					<h5><%= item.title %></h5>
				</li>
				<% end %>
			</ul>
		<% end %>
	</div>
</div>